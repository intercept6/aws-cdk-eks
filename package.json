{
  "name": "aws-cdk-eks",
  "version": "0.1.0",
  "bin": {
    "aws-cdk-eks": "bin/aws-cdk-eks.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "format": "eslint --fix \"./**/*.{ts,json}\"",
    "cdk": "cdk",
    "diff": "cdk diff",
    "deploy": "tsc && cdk deploy *Stack --require-approval never",
    "synth": "tsc && cdk synth",
    "ci_diff": "cdk diff 2>&1 | sed -r \"s/\\x1B\\[([0-9]{1,2}(;[0-9]{1,2})*)?m//g\" || true",
    "ci_deploy": "cdk deploy *Stack --require-approval never",
    "test": "jest",
    "test_update": "jest --updateSnapshot"
  },
  "pre-commit": [
    "test"
  ],
  "devDependencies": {
    "@aws-cdk/assert": "1.6.1",
    "@types/jest": "24.0.18",
    "@types/node": "10.14.16",
    "@typescript-eslint/eslint-plugin": "2.1.0",
    "@typescript-eslint/parser": "2.1.0",
    "aws-cdk": "1.6.1",
    "eslint": "6.3.0",
    "eslint-config-prettier": "6.1.0",
    "eslint-plugin-prettier": "3.1.0",
    "husky": "3.0.5",
    "jest": "24.9.0",
    "lint-staged": "9.2.5",
    "pre-commit": "1.2.2",
    "prettier": "1.18.2",
    "ts-jest": "24.0.2",
    "ts-node": "8.3.0",
    "typescript": "3.6.2"
  },
  "dependencies": {
    "@aws-cdk/aws-ec2": "1.6.1",
    "@aws-cdk/aws-eks": "1.6.1",
    "@aws-cdk/core": "1.6.1",
    "source-map-support": "0.5.13"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ],
    "preset": "ts-jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix \"./**/*.{ts,json}\"",
      "git add"
    ]
  }
}
