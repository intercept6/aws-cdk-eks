{
  "name": "aws-cdk-eks",
  "version": "0.1.0",
  "bin": {
    "aws-cdk-eks": "bin/aws-cdk-eks.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "format": "eslint --fix \"./**/*.{ts,json}\"",
    "cdk": "cdk",
    "diff": "cdk diff",
    "ci_diff": "cdk diff 2>&1 | sed -r \"s/\\x1B\\[([0-9]{1,2}(;[0-9]{1,2})*)?m//g\" || true",
    "ci_deploy": "cdk deploy *Stack --require-approval never",
    "test": "jest"
  },
  "pre-commit": [
    "test"
  ],
  "devDependencies": {
    "@aws-cdk/assert": "^1.2.0",
    "@types/jest": "^24.0.16",
    "@types/node": "8.10.45",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "aws-cdk": "^1.2.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "3.0.2",
    "jest": "^24.8.0",
    "lint-staged": "9.2.1",
    "pre-commit": "^1.2.2",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "@aws-cdk/aws-ec2": "^1.2.0",
    "@aws-cdk/aws-eks": "^1.2.0",
    "@aws-cdk/core": "^1.2.0",
    "source-map-support": "^0.5.9"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ],
    "preset": "ts-jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.ts": [
        "eslint --fix \"./**/*.{ts,json}\"",
        "git add"
      ]
    },
    "ignore": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  }
}
